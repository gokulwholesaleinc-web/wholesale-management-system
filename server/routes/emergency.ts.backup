import express, { Request, Response } from 'express';
import { storage } from '../storage';
import { db } from '../db';
import { cartItems } from '../../shared/schema';
import { eq } from 'drizzle-orm';

const router = express.Router();

// Emergency cart clear route
router.delete('/emergency-clear-cart/:userId', async (req: Request, res: Response) => {
  try {
    const userId = req.params.userId;
    
    if (!userId) {
      return res.status(400).json({ 
        success: false,
        message: 'Missing userId parameter' 
      });
    }
    
    console.log('üî• EMERGENCY CART WIPE REQUESTED FOR:', userId);
    console.log('‚≠êÔ∏è NUCLEAR CART CLEAR REQUESTED FOR:', userId);
    
    console.log('Attempt 1: Using storage API');
    console.log('Actually clearing cart for user:', userId);
    
    try {
      console.log('üß® ABSOLUTE NUCLEAR CART WIPE FOR:', userId);
      await storage.clearCart(userId);
      console.log('‚úÖ Cart cleared successfully for:', userId);
    } catch (clearErr) {
      console.error('Failed to clear cart with storage API:', clearErr);
    }
    
    return res.json({
      success: true,
      message: `Successfully cleared cart for user: ${userId}`
    });
  } catch (error) {
    console.error('Error clearing cart:', error);
    return res.status(500).json({
      success: false,
      message: 'Failed to clear cart'
    });
  }
});

export default router;